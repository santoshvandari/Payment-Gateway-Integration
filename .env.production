# Production Environment Configuration
# Copy this file to .env and update with your actual credentials

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-production-key-here
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database (Use PostgreSQL or MySQL in production)
DATABASE_URL=postgres://username:password@localhost/dbname

# Payment Gateway Mode
PAYMENT_GATEWAY_MODE=production

# eSewa Production Configuration
# Get these from eSewa merchant portal
ESEWA_SCD=YOUR_ACTUAL_MERCHANT_CODE
ESEWA_SUCCESS_URL=https://yourdomain.com/payment/esewa-success/
ESEWA_FAILURE_URL=https://yourdomain.com/payment/esewa-failure/
ESEWA_PAYMENT_URL=https://epay.esewa.com.np/api/epay/main/v2/form
ESEWA_VERIFY_URL=https://epay.esewa.com.np/api/epay/transaction/status/

# Khalti Production Configuration
# Get these from Khalti merchant portal
KHALTI_PUBLIC_KEY=live_public_key_YOUR_ACTUAL_KEY
KHALTI_SECRET_KEY=live_secret_key_YOUR_ACTUAL_KEY
KHALTI_PAYMENT_URL=https://a.khalti.com/api/v2/epayment/initiate/
KHALTI_VERIFY_URL=https://a.khalti.com/api/v2/epayment/lookup/
KHALTI_SUCCESS_URL=https://yourdomain.com/payment/khalti-success/
KHALTI_FAILURE_URL=https://yourdomain.com/payment/khalti-failure/
KHALTI_WEBSITE_URL=https://yourdomain.com/

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
